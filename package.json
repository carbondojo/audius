{
  "name": "audius",
  "productName": "Audius",
  "version": "1.4.2",
  "description": "A cross-platform app for downloading songs from YouTube and Spotify",
  "author": {
    "name": "Mihir Pathak",
    "email": "mihirpathak97@gmail.com",
    "url": "https://github.com/mihirpathak97"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mihirpathak97/audius.git"
  },
  "private": true,
  "main": "src/app.main.js",
  "homepage": "./",
  "dependencies": {
    "async": "^2.6.1",
    "base-64": "^0.1.0",
    "electron-is-dev": "^0.3.0",
    "electron-log": "^2.2.17",
    "electron-settings": "^3.2.0",
    "electron-updater": "^3.1.1",
    "express": "^4.16.3",
    "express-no-favicons": "^0.0.1",
    "fluent-ffmpeg": "^2.1.2",
    "progress-stream": "^2.0.0",
    "querystring": "^0.2.0",
    "request": "^2.88.0",
    "resolve": "1.8.1",
    "through2": "^2.0.3",
    "xhr": "^2.5.0",
    "ytdl-core": "^0.24.0"
  },
  "devDependencies": {
    "@fortawesome/fontawesome": "^1.1.8",
    "@fortawesome/fontawesome-free-solid": "^5.0.13",
    "@fortawesome/react-fontawesome": "^0.1.2",
    "@material-ui/core": "^1.5.0",
    "@material-ui/icons": "^2.0.2",
    "adm-zip": "^0.4.11",
    "autoprefixer": "9.1.1",
    "babel-core": "6.26.3",
    "babel-eslint": "8.2.6",
    "babel-jest": "23.4.2",
    "babel-loader": "7.1.5",
    "babel-preset-react-app": "^3.1.2",
    "babel-runtime": "6.26.0",
    "case-sensitive-paths-webpack-plugin": "2.1.2",
    "chalk": "2.4.1",
    "concurrently": "^3.6.1",
    "cross-env": "^5.2.0",
    "css-loader": "1.0.0",
    "dotenv": "6.0.0",
    "dotenv-expand": "4.2.0",
    "download": "^7.1.0",
    "electron": "^2.0.7",
    "electron-builder": "^20.28.1",
    "eslint": "5.4.0",
    "eslint-config-react-app": "^2.1.0",
    "eslint-loader": "2.1.0",
    "eslint-plugin-flowtype": "2.50.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jsx-a11y": "6.1.1",
    "eslint-plugin-react": "7.11.1",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "1.1.11",
    "fs-extra": "7.0.0",
    "html-webpack-plugin": "3.2.0",
    "jest": "23.5.0",
    "object-assign": "4.1.1",
    "postcss-flexbugs-fixes": "4.1.0",
    "postcss-loader": "3.0.0",
    "raf": "3.4.0",
    "react": "^16.4.2",
    "react-dev-utils": "^5.0.1",
    "react-dom": "^16.4.2",
    "react-router-dom": "^4.3.1",
    "style-loader": "0.22.1",
    "sw-precache-webpack-plugin": "0.11.5",
    "url-loader": "1.1.1",
    "wait-on": "^2.1.0",
    "webpack": "4.16.5",
    "webpack-dev-server": "3.1.5",
    "webpack-manifest-plugin": "2.0.3",
    "whatwg-fetch": "2.0.4"
  },
  "scripts": {
    "init-app": "node scripts/bootstrap.js",
    "start": "node scripts/start.js",
    "build": "node scripts/build.js",
    "test": "node scripts/test.js --env=jsdom",
    "electron-dev": "concurrently \"cross-env BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "package-all": "build -mwl",
    "package-linux": "build --linux --x64",
    "package-win": "build --win --x64",
    "package-mac": "build --mac --x64"
  },
  "build": {
    "appId": "in.mihirpathak.audius",
    "copyright": "Copyright Â© 2018 Mihir Pathak",
    "artifactName": "${productName}Setup.${ext}",
    "publish": {
      "provider": "github"
    },
    "generateUpdatesFilesForAllChannels": true,
    "files": [
      "react-compiled/**/*",
      "node_modules/**/*",
      "src/app.main.js",
      "src/modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "target": "dmg",
      "artifactName": "${name}-setup.${ext}",
      "extraResources": [
        "bin/ffmpeg/darwin",
        "bin/rainbow/darwin"
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "category": "Audio",
      "synopsis": "A cross-platform app for downloading songs from YouTube and Spotify",
      "target": "deb",
      "artifactName": "${name}-${arch}.${ext}",
      "extraResources": [
        "bin/ffmpeg/linux",
        "bin/rainbow/linux"
      ]
    },
    "deb": {
      "depends": [
        "gconf2",
        "gconf-service",
        "libnotify4",
        "libappindicator1",
        "libxtst6",
        "libnss3"
      ]
    },
    "win": {
      "extraResources": [
        "bin/ffmpeg/win32",
        "bin/rainbow/win32"
      ],
      "target": "nsis",
      "icon": "build/icon.ico",
      "artifactName": "${productName}Setup-x64.${ext}"
    },
    "nsis": {
      "oneClick": "true",
      "perMachine": "true"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,mjs}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,mjs}",
      "<rootDir>/src/**/?(*.)(spec|test).{js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node",
      "mjs"
    ]
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  }
}
